{
  "manifest_version": 3,
  "name": "JobRadar - Application Assistant",
  "version": "1.0.0",
  "description": "Automatically extracts questions from job applications and provides answers from your personal Q&A databank. No auto-fill - you review and copy answers manually.",
  "author": "JobRadar",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*/*",
    "http://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open JobRadar Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup/popup.html"
  }
}
